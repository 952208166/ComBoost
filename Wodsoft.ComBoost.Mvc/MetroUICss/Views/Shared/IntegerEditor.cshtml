@model MvcEditorModel
<div class="input-control number">
    <input type="number" id="@Model.Metadata.ClrName" name="@Model.Metadata.ClrName" value="@Model.Value" step="1"/>
    <button class="btn-clear"></button>
</div>
<script type="text/javascript">
    $('#@Model.Metadata.ClrName').change(function () {
        var number = new Number($(this).val());
        if (isNaN(number)) {
            $(this).val(0);
            return;
        }
        $(this).val(Math.round(number));
    });
</script>
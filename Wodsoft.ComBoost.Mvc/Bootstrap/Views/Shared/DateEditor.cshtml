@model MvcEditorModel
<div class="input-group col-md-4">
    <input type="date" class="form-control" id="@Model.Metadata.ClrName" name="@Model.Metadata.ClrName" value="@(((DateTime)Model.Value).ToShortDateString())" />
</div>
<script type="text/javascript">
    $('#@Model.Metadata.ClrName').datepicker();
</script>
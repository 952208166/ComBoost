<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <Description>ComBoost用于AspNet Core的领域模块。</Description>
    <AssemblyTitle>Wodsoft.ComBoost.AspNetCore</AssemblyTitle>
    <VersionPrefix>3.0.0-alpha21</VersionPrefix>
    <Authors>Kation</Authors>
    <TargetFramework>netstandard1.3</TargetFramework>
    <AssemblyName>Wodsoft.ComBoost.AspNetCore</AssemblyName>
    <PackageId>Wodsoft.ComBoost.AspNetCore</PackageId>
    <PackageTags>ComBoost</PackageTags>
    <PackageReleaseNotes>Alpha测试版，请勿用于正式环境。</PackageReleaseNotes>
    <RepositoryType>git</RepositoryType>
    <RepositoryUrl>https://github.com/Kation/ComBoost</RepositoryUrl>
    <PackageTargetFallback>$(PackageTargetFallback);dnxcore50</PackageTargetFallback>
    <GenerateAssemblyConfigurationAttribute>false</GenerateAssemblyConfigurationAttribute>
    <GenerateAssemblyCompanyAttribute>false</GenerateAssemblyCompanyAttribute>
    <GenerateAssemblyProductAttribute>false</GenerateAssemblyProductAttribute>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\Wodsoft.ComBoost\Wodsoft.ComBoost.csproj" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Newtonsoft.Json" Version="10.0.2" />
    <PackageReference Include="Microsoft.AspNetCore.Http.Abstractions" Version="1.1.2" />
  </ItemGroup>

</Project>
